<?xml version="1.0" encoding="utf-8"?>
<manifest package="pt.rfernandes.bubbletweet"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <application
      android:name=".custom.MyApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".ui.activities.SplashActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
        android:name=".ui.goodies.GoodiesActivity"
        android:label="@string/title_activity_goodies" />
    <activity
        android:name="com.google.android.gms.ads.AdActivity"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
        android:theme="@android:style/Theme.Translucent" />

    <activity android:name=".ui.activities.MainActivity">

    </activity> <!-- Include the AdActivity configChanges and theme. -->
    <meta-data
        android:name="com.bugsnag.android.API_KEY"
        android:value="bdf20be8ba623df018e7e721c5cf9341" />
    <meta-data
        android:name="com.google.android.gms.ads.APPLICATION_ID"
        android:value="ca-app-pub-5556364700570622~7189540368" />

    <receiver android:name=".ui.widget.SendTweetWidget">
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
      </intent-filter>

      <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/send_tweet_widget_info" />
    </receiver>

    <service
        android:name=".custom.service.FloatingService"
        android:enabled="true"
        android:exported="false" />
  </application>

  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
  <uses-permission android:name="android.permission.VIBRATE" />
  <uses-permission android:name="android.permission.INTERNET" />

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>